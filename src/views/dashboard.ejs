<!DOCTYPE html>
<html>
<head>
  <title>Dashboard</title>
  <style>
    body { font-family: Arial; background: #f5f5f5; padding: 20px; }
    .card { background: #fff; padding: 20px; border-radius: 8px; }
    .url { display: flex; justify-content: space-between; margin: 8px 0; }
    button { cursor: pointer; }
    .admin { background: #000; color: #fff; padding: 8px; }
  </style>
</head>
<body>

<div class="card">
  <h2>Welcome üëã</h2>
  <p><b>Role:</b> <%= user.role %></p>

  <% if (user.role === "admin") { %>
    <a class="admin" href="/admin">Admin Panel</a>
  <% } %>

  <hr>

  <h3>Create Short URL</h3>
  <form method="POST" action="/shorten">
    <input name="url" placeholder="https://example.com" required>
    <button>Create</button>
  </form>

  <hr>

  <h3>Your URLs</h3>

  <% if (urls.length === 0) { %>
    <p>No URLs yet</p>
  <% } %>

  <% urls.forEach(u => { %>
    <div class="url">
      <div>
        <a href="/<%= u.shortId %>" target="_blank">
          <%= u.shortId %>
        </a>
        ‚Äî <%= u.clicks %> clicks
      </div>

      <form method="POST" action="/delete/<%= u._id %>">
        <button>‚ùå Delete</button>
      </form>
    </div>
  <% }) %>

  <hr>

  <form method="POST" action="/auth/logout">
    <button>Logout</button>
  </form>
</div>

</body>
</html>
